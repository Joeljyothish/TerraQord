  <ItemGroup>
    <Reference Include="Auxiliary">
      <HintPath>..\..\Application\ServerPlugins\Auxiliary.dll</HintPath>
    </Reference>
    <Reference Include="ModFramework">
      <HintPath>..\..\Application\bin\ModFramework.dll</HintPath>
    </Reference>
    <Reference Include="OTAPI">
      <HintPath>..\..\Application\bin\OTAPI.dll</HintPath>
    </Reference>
    <Reference Include="OTAPI.Runtime">
      <HintPath>..\..\Application\bin\OTAPI.Runtime.dll</HintPath>
    </Reference>
    <Reference Include="TerrariaServer">
      <HintPath>..\..\Application\bin\TerrariaServer.dll</HintPath>
    </Reference>
    <Reference Include="TShockAPI">
      <HintPath>..\..\Application\ServerPlugins\TShockAPI.dll</HintPath>
    </Reference>
